<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
         http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>am.aca.wftartproject.controller.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>



    <servlet>
        <servlet-name>ShopServlet</servlet-name>
        <servlet-class>am.aca.wftartproject.controller.ShopServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShopServlet</servlet-name>
        <url-pattern>/shop</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>am.aca.wftartproject.controller.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>am.aca.wftartproject.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>am.aca.wftartproject.controller.LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignUp</servlet-name>
        <servlet-class>am.aca.wftartproject.controller.SignUpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>My Account</servlet-name>
        <servlet-class>am.aca.wftartproject.controller.AccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>My Account</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Edit Profile</servlet-name>
        <servlet-class>am.aca.wftartproject.controller.EditProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Edit Profile</servlet-name>
        <url-pattern>/edit-profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Purchase History</servlet-name>
        <servlet-class>am.aca.wftartproject.controller.PurchaseHistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Purchase History</servlet-name>
        <url-pattern>/purchase-history</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ItemDetail</servlet-name>
        <servlet-class>am.aca.wftartproject.controller.ItemDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ItemDetail</servlet-name>
        <url-pattern>/shop-detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemDetail</servlet-name>
        <url-pattern>/shop-detail/*</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ContactServlet</servlet-name>
        <servlet-class>am.aca.wftartproject.controller.ContactServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContactServlet</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AboutServlet</servlet-name>
        <servlet-class>am.aca.wftartproject.controller.AboutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AboutServlet</servlet-name>
        <url-pattern>/about</url-pattern>
    </servlet-mapping>


</web-app>